<?xml version="1.0" encoding="utf-8"?>
<configuration>
  

  <!--<connectionStrings>
    <add name="SchoolDBConnectionString"
    connectionString="Data Source=.;Initial Catalog=OpenWeather;Integrated Security=true"
    providerName="System.Data.SqlClient"/>
